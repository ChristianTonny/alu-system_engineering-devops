#!/usr/bin/env bash
# Script to configure Nginx with a custom 404 page

# Update package lists and install nginx with automatic yes to prompts
apt-get update
apt-get install -y nginx

# Create a simple HTML page with the required string
echo "Holberton School" > /var/www/html/index.html

# Create a custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure redirection and custom 404 page by modifying the default Nginx configuration
sed -i '/server_name _;/a \\n\tlocation \/redirect_me {\n\t\treturn 301 https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;\n\t}\n\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Ensure nginx is running and restart it
service nginx restart

# Make sure nginx starts on boot
update-rc.d nginx defaults 